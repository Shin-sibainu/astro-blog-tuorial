import { getBlogs } from "../libs/microcms";
const response = await getBlogs({ fields: ["id", "title"] });
---

<Layout title="Welcome to Astro.">
  <main>
    <h1>Astro Blog</h1>
    <ul>
      {
        response.contents.map((content: any) => (
          <li>
            üìù<a href={content.id}>{content.title}</a>
